#!/usr/bin/env ruby

require 'nyx_post'

# Create
puts "==> Create one"
reply = NyxPost::Client::CreatePost.new("GPG Keys", "Howto create a GPG Key with Tails Linux").start
puts reply

puts "==> Get all"
posts = NyxPost::Client::GetPost.new.all(0, 0)
posts.each { |p| puts "#{p.id} | #{p.title} | #{p.description}" }

# save an id
id = posts[0].id

# Get
puts "==> By id: #{id}"
post = NyxPost::Client::GetPost.new.by_id(id)
puts "#{post.id} | #{post.title} | #{post.description}"

# Delete
puts "==> Delete post #{id}"
res = NyxPost::Client::DeletePost.new(id).start
puts res
